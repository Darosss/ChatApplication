{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "paths": {
      "@/middlewares/*": ["middlewares/*"],
      "@/utils/*": ["utils/*"],
      "@/models/*": ["models/*"],
      "@/services/*": ["services/*"],
      "@/config/*": ["config/*"]
    },
    "typeRoots": ["@types"],
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/tests/", "./node_modules", "./jest.config.ts"]
}
